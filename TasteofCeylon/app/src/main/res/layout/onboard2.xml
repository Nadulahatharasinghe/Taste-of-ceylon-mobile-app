<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_pattern" />

    <!-- Main Content in center -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/app_logo" />

        <!-- Transparent Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_bg"
            android:padding="20dp"
            android:layout_margin="16dp">

            <!-- Terms & Conditions Text -->
            <TextView
                android:id="@+id/termsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By using our site, you agree to our policies on product use, payments, and returns. Prices and availability may change. Please review our full Terms &amp; Conditions before purchase."
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="2dp" />

            <!-- Checkbox -->
            <CheckBox
                android:id="@+id/checkboxAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I accept the terms &amp; condition"
                android:textColor="#000000"
                android:layout_marginTop="12dp" />

            <!-- Next Button -->
            <Button
                android:id="@+id/btnNext2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="#000000"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
